<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ahat.mobilemoney.AddBankActivity">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:entries="@array/bank_names"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinner"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"/>

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText5"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginTop="9dp"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:onClick="addBank"
        android:text="Add"
        app:layout_constraintLeft_toLeftOf="@+id/editText7"
        app:layout_constraintTop_toBottomOf="@+id/editText7"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="23dp"
        android:background="@color/accent_material_dark"
        android:drawableLeft="@android:drawable/ic_dialog_info"
        android:drawablePadding="16dp"
        android:paddingBottom="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:text="Your credentials will be encrypted and stored only in your mobile device. They will be used only with fingerprint verification."
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="96dp"
        android:layout_height="52dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:drawableLeft="?android:attr/textCheckMark"
        android:text="Test"
        app:layout_constraintRight_toRightOf="@+id/editText7"
        app:layout_constraintTop_toTopOf="@+id/button3"
        tools:layout_editor_absoluteX="129dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="31dp"
        android:background="@color/accent_material_dark"
        android:drawableLeft="@android:drawable/stat_notify_error"
        android:drawablePadding="16dp"
        android:paddingBottom="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:text="Please note that testing the credentials means actually loging in the bank's web banking system. Some banks will lock an account after 3 invalid login attempts."
        app:layout_constraintLeft_toLeftOf="@+id/button3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>
