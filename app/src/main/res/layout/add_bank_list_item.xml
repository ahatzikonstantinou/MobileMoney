<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/activity_add_bank_list_bank_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="18sp"
        tools:text="Πειραιώς"
        app:layout_constraintLeft_toRightOf="@+id/activity_add_bank_list_bank_logo"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_add_bank_list_bank_logo"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/activity_add_bank_list_bank_logo"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/activity_add_bank_list_bank_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/alphabank_400x400"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.501"
        />

</android.support.constraint.ConstraintLayout>